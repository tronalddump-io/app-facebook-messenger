<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <servlet>
        <servlet-name>heartbeat</servlet-name>
        <servlet-class>io.tronalddump.app.facebook.messenger.HeartbeatServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>webhook</servlet-name>
        <servlet-class>com.github.marsbits.restfbmessenger.webhook.WebhookServlet</servlet-class>
        <init-param>
            <param-name>messengerProviderClass</param-name>
            <param-value>io.tronalddump.app.facebook.messenger.TronaldDumpMessengerProvider</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>heartbeat</servlet-name>
        <url-pattern>/heartbeat</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>webhook</servlet-name>
        <url-pattern>/webhook</url-pattern>
    </servlet-mapping>

</web-app>
